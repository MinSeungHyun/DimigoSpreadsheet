<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/ingang1Background"
            style="@style/WidgetItemBackgroundStyle"
            android:background="@drawable/top_rounded_background" />

        <ImageView
            android:id="@+id/ingang2Background"
            style="@style/WidgetItemBackgroundStyle"
            android:background="@color/colorPrimary" />

        <ImageView
            android:id="@+id/clubBackground"
            style="@style/WidgetItemBackgroundStyle" />

        <ImageView
            android:id="@+id/etcBackground"
            style="@style/WidgetItemBackgroundStyle" />

        <ImageView
            android:id="@+id/bathroomBackground"
            style="@style/WidgetItemBackgroundStyle"
            android:background="@drawable/bottom_rounded_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="ContentDescription">

        <TextView
            android:id="@+id/ingang1"
            style="@style/WidgetItemStyle"
            android:text="@string/ingang1" />

        <TextView
            android:id="@+id/ingang2"
            style="@style/WidgetItemStyle"
            android:text="@string/ingang2" />

        <TextView
            android:id="@+id/club"
            style="@style/WidgetItemStyle"
            android:text="@string/club" />

        <TextView
            android:id="@+id/etc"
            style="@style/WidgetItemStyle"
            android:text="@string/etc" />

        <TextView
            android:id="@+id/bathroom"
            style="@style/WidgetItemStyle"
            android:text="@string/bathroom" />
    </LinearLayout>

    <TextView
        android:id="@+id/errorTV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_background"
        android:backgroundTint="@color/transparentWhite"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/teacher_cannot_use"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />
</RelativeLayout>